
def level_two():
    
    numbers_chosen = [] 
    #OBJECT OF CLASS Level
    level_two = Level(background,22)
    level_two.loading_objects()

    clock = pygame.time.Clock()
 
    suma = 0
    
    while True:
        
    

        level_two.wheel_star_rotation(1.0,1.0) 
        
        level_two.star_object.image_marking()

        level_two.main_character.character_rect.topleft = (level_two.main_character.char_x,level_two.main_character.char_y)
        #end of star changing color      
         
        pressed_keys = pygame.key.get_pressed()

        #setting the fps
        time_passed = clock.tick(50)
        time_passed_seconds = time_passed / 1000.0

        # making the character move
        
        if pressed_keys[K_RIGHT]:
            level_two.main_character .char_x += level_two.main_character.char_speed * time_passed_seconds
        if pressed_keys[K_LEFT]:
            level_two.main_character.char_x -= level_two.main_character.char_speed * time_passed_seconds
        if pressed_keys[K_UP]:
            level_two.main_character.char_y -= level_two.main_character.char_speed * time_passed_seconds
        if pressed_keys[K_DOWN]:
            level_two.main_character.char_y += level_two.main_character.char_speed * time_passed_seconds          
        # end of the movement
        
       
        # if character goes out of the screen
        
        level_two.main_character.char_out_of_screen()
                          
        #rotating the wheel and the star
        level_two.first_wheel.rotating_wheel(level_two.first_wheel.wheel,level_two.first_wheel.wheel_rotation,level_two.first_wheel.wheel_pos.x,level_two.first_wheel.wheel_pos.y)
        level_two.star_object.rotating_star(level_two.star_object.star,level_two.star_object.star_rotation,level_two.star_object.star_pos.x,level_two.star_object.star_pos.y)
        

        screen.fill((0,0,0))   
        level_two.blit_main()     
        screen.blit(level_two.first_wheel.rotated_wheel, level_two.first_wheel.wheel_draw_pos)
        screen.blit(level_two.star_object.rotated_star, level_two.star_object.star_draw_pos)
                   
        level_two.numbers_rotated(9,0.032)
       
        
        #wheel rotation
        level_two.first_wheel.wheel_rotation += level_two.first_wheel.wheel_rotation_direction * level_two.first_wheel.wheel_rotation_speed *time_passed_seconds
        #star rotation
        level_two.star_object.star_rotation += level_two.star_object.star_rotation_direction * level_two.star_object.star_rotation_speed *time_passed_seconds
        
        level_two.star_object.star_rect.topleft=(level_two.star_object.star_draw_pos.x,level_two.star_object.star_draw_pos.y)
        
        #creating a new mask
        level_two.star_object.star_mask = pygame.mask.from_surface(level_two.star_object.rotated_star)
           
        screen.blit(level_two.main_character.character,(level_two.main_character.char_x,level_two.main_character.char_y))
        
        #collision detection for the character and the star
        collision_detection(level_two.main_character.character,level_two.star_object.star_rect.left , level_two.star_object.star_rect.top , level_two.main_character.character_rect.left , level_two.main_character.character_rect.top , level_two.star_object.star_mask , level_two.main_character.character_mask)
        
        #collision detection for the number one
        coli_1=level_two.num_obj.collision_detection_numbers(1,level_two.num_obj.eden,level_two.main_character.character,level_two.num_obj.eden_pos.x , level_two.num_obj.eden_pos.y , level_two.main_character.character_rect.left , level_two.main_character.character_rect.top , level_two.num_obj.eden_mask , level_two.main_character.character_mask,numbers_chosen)
                
        if coli_1==True:
           num1 = goalfont.render("1", 1, (0,0,0))
           level_two.num_obj.one_c=True
        if(level_two.num_obj.one_c==True):
           screen.blit(num1,(534,10))#406+128
 
        #collision detection for the number two
        coli_2=level_two.num_obj.collision_detection_numbers(2,level_two.num_obj.dva,level_two.main_character.character,level_two.num_obj.dva_pos.x , level_two.num_obj.dva_pos.y , level_two.main_character.character_rect.left , level_two.main_character.character_rect.top , level_two.num_obj.dva_mask , level_two.main_character.character_mask,numbers_chosen)
        if coli_2==True:
           num2 = goalfont.render("2", 1, (0,0,0))
           level_two.num_obj.two_c=True
        if(level_two.num_obj.two_c==True):
           screen.blit(num2,(558,10))
           
        #collision detection for the number three
        coli_3=level_two.num_obj.collision_detection_numbers(3,level_two.num_obj.tri,level_two.main_character.character,level_two.num_obj.tri_pos.x , level_two.num_obj.tri_pos.y , level_two.main_character.character_rect.left , level_two.main_character.character_rect.top , level_two.num_obj.tri_mask , level_two.main_character.character_mask,numbers_chosen)   
        if coli_3==True:
           num3 = goalfont.render("3", 1, (0,0,0))
           level_two.num_obj.three_c=True
        if(level_two.num_obj.three_c==True):
           screen.blit(num3,(583,10))

        #collision detection for the number four
        coli_4=level_two.num_obj.collision_detection_numbers(4,level_two.num_obj.cetiri,level_two.main_character.character,level_two.num_obj.cetiri_pos.x , level_two.num_obj.cetiri_pos.y , level_two.main_character.character_rect.left , level_two.main_character.character_rect.top , level_two.num_obj.cetiri_mask , level_two.main_character.character_mask,numbers_chosen)
        if coli_4==True:
           num4 = goalfont.render("4", 1, (0,0,0))
           level_two.num_obj.four_c=True
        if(level_two.num_obj.four_c==True):
           screen.blit(num4,(608,10))
         
        #collision detection for the number five
        coli_5=level_two.num_obj.collision_detection_numbers(5,level_two.num_obj.pet,level_two.main_character.character,level_two.num_obj.pet_pos.x , level_two.num_obj.pet_pos.y , level_two.main_character.character_rect.left , level_two.main_character.character_rect.top , level_two.num_obj.pet_mask , level_two.main_character.character_mask,numbers_chosen)  
        if coli_5==True:
           num5 = goalfont.render("5", 1, (0,0,0))
           level_two.num_obj.five_c=True
        if(level_two.num_obj.five_c==True):
           screen.blit(num5,(637,10)) 

        #collision detection for the number six
        coli_6=level_two.num_obj.collision_detection_numbers(6,level_two.num_obj.sest,level_two.main_character.character,level_two.num_obj.sest_pos.x , level_two.num_obj.sest_pos.y , level_two.main_character.character_rect.left , level_two.main_character.character_rect.top , level_two.num_obj.sest_mask , level_two.main_character.character_mask,numbers_chosen)
        if coli_6==True:
           num6 = goalfont.render("6", 1, (0,0,0))
           level_two.num_obj.six_c=True
        if(level_two.num_obj.six_c==True):
           screen.blit(num6,(664,10))

        #collision detection for the number seven
        coli_7=level_two.num_obj.collision_detection_numbers(7,level_two.num_obj.sedum,level_two.main_character.character,level_two.num_obj.sedum_pos.x , level_two.num_obj.sedum_pos.y , level_two.main_character.character_rect.left , level_two.main_character.character_rect.top , level_two.num_obj.sedum_mask , level_two.main_character.character_mask,numbers_chosen)
        if coli_7==True:
           num7 = goalfont.render("7", 1, (0,0,0))
           level_two.num_obj.seven_c=True
        if(level_two.num_obj.seven_c==True):
           screen.blit(num7,(690,10))
        #collision detection for the number eight
        coli_8=level_two.num_obj.collision_detection_numbers(8,level_two.num_obj.osum,level_two.main_character.character,level_two.num_obj.osum_pos.x , level_two.num_obj.osum_pos.y , level_two.main_character.character_rect.left , level_two.main_character.character_rect.top , level_two.num_obj.osum_mask , level_two.main_character.character_mask,numbers_chosen)
        if coli_8==True:
           num8 = goalfont.render("8", 1, (0,0,0))
           level_two.num_obj.eight_c=True
        if(level_two.num_obj.eight_c==True):
           screen.blit(num8,(717,10))
        #collision detection for the number nine
        coli_9=level_two.num_obj.collision_detection_numbers(9,level_two.num_obj.devet,level_two.main_character.character,level_two.num_obj.devet_pos.x , level_two.num_obj.devet_pos.y , level_two.main_character.character_rect.left , level_two.main_character.character_rect.top , level_two.num_obj.devet_mask , level_two.main_character.character_mask,numbers_chosen)
        if coli_9==True:
           num9 = goalfont.render(str(9), 1, (0,0,0))
           level_two.num_obj.nine_c=True
        if(level_two.num_obj.nine_c==True):
           screen.blit(num9,(742,10))
             
        summ=check_the_sum(numbers_chosen,22,suma)
        screen.blit(summ,(80,500))
        level_two.print_text_sum()
        check_sum(numbers_chosen,22,suma,passed)
        pygame.display.update() 
